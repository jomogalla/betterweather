<?xml version="1.0"?>
            <!DOCTYPE hibernate-mapping PUBLIC
                "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
 
<hibernate-mapping>
	<!-- replace environments with the table to be used
		the table must have fields: id=INT, OS=VARCHAR(30), OS_VERSION=VARCHAR(30), notes=LONGTEXT -->
	<class name="model.Ide" table="environments">
		<id name="id" column="id">
			<generator class="increment" />
		</id>
		
		<property name="os" type="string" column="OS" />
		<property name="os_version" type="string" column="OS_VERSION" />
		<property name="notes" type="string" column="notes" />
	</class>
 
</hibernate-mapping>
